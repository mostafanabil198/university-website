<div class="row center signup">
  <div class="col s12 m6 offset-m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %> </p>
        <br>
        <p><span class="card-title">Enrollment List:</span>
          <% if @student.courses.empty? %>
            None
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <li><%= course.name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
      <% if current_user == @student %>
        <div class="card-action center">
          <%= link_to "<i class='material-icons'>create</i>Edit your profile".html_safe, edit_student_path(@student) %>
        </div>
      <% end %>

    </div>
  </div>
</div>
